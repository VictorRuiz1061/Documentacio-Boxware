---
import Layout from '../../layouts/Layout.astro';
import CopyButton from '../../components/CopyButton.astro';
import ApiUrl from '../../components/ApiUrl.astro';
import AnimacionSubida from '../../components/AnimacionSubida/AnimacionSubida.astro';
---

<Layout title="Documentación API de Módulos" >
  <div class="max-w-4xl mx-auto pt-10 pb-20">
    <h1 class="text-4xl font-bold text-center mb-10 bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-indigo-600">API de Módulos</h1>
    
    <div class="space-y-12">
      <!-- Introducción -->
      <AnimacionSubida delay={0} duration={800}>
        <section class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 border border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-bold mb-4 text-indigo-600 dark:text-indigo-400">Introducción</h2>
          <p class="text-gray-700 dark:text-gray-300 mb-4">
            Esta API proporciona endpoints para gestionar módulos en el sistema. Permite realizar operaciones CRUD
            (Crear, Leer, Actualizar y Eliminar) sobre los registros de módulos almacenados en la base de datos.
          </p>
          <p class="text-gray-700 dark:text-gray-300">
            Todas las respuestas son devueltas en formato JSON y siguen estándares HTTP para los códigos de estado.
          </p>
        </section>
      </AnimacionSubida>

      <!-- Base URL -->
      <AnimacionSubida delay={200} duration={800}>
        <section class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 border border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-bold mb-4 text-indigo-600 dark:text-indigo-400">URL Base</h2>
          <div class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg font-mono text-sm relative">
            <CopyButton />  
            <ApiUrl endpoint="/modulos" tag="code" />
          </div>
          <p class="mt-4 text-gray-700 dark:text-gray-300">
            Todos los endpoints descritos en esta documentación deben ser precedidos por esta URL base.
          </p>
        </section>
      </AnimacionSubida>

      <!-- Modelo de datos -->
      <AnimacionSubida delay={400} duration={800}>
        <section class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 border border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-bold mb-6 text-indigo-600 dark:text-indigo-400">Modelo de datos</h2>
          <h3 class="text-xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Módulo</h3>
          <table class="min-w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
            <thead class="bg-gray-100 dark:bg-gray-900">
              <tr>
                <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Campo</th>
                <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Tipo</th>
                <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Descripción</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">id_modulo</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Integer</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Identificador único del módulo</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">fecha_accion</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">DateTime</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Fecha en que se realizó la acción en el módulo</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">rutas</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">String</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Ruta de acceso al módulo</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">descripcion_ruta</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">String</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Descripción detallada de la ruta</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">bandera_accion</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Boolean</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Indicador de estado de la acción</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">mensaje_cambio</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">String</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Mensaje descriptivo del cambio realizado</td>
              </tr>
            </tbody>
          </table>
        </section>
      </AnimacionSubida>

      <!-- Endpoints -->
      <AnimacionSubida delay={600} duration={800}>
        <section class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 border border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-bold mb-6 text-indigo-600 dark:text-indigo-400">Endpoints</h2>
          
          <!-- GET /modulos -->
          <div class="mb-12">
            <div class="flex items-center gap-3 mb-4 relative">
              <span class="bg-green-500 text-white px-3 py-1 rounded-md font-bold text-sm">GET</span>
              <CopyButton />
              <ApiUrl endpoint="/modulos" tag="h3" />
            </div>
            <p class="mb-4 text-gray-700 dark:text-gray-300">
              Obtiene una lista de todos los módulos registrados en el sistema.
            </p>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Respuesta</h4>
              <div class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg">
                <pre class="language-json overflow-x-auto text-sm"><code>[
  &#123;
    "id_modulo": 1,
    "fecha_accion": "2023-01-15T10:30:00.000Z",
    "rutas": "/dashboard",
    "descripcion_ruta": "Panel principal del sistema",
    "bandera_accion": true,
    "mensaje_cambio": "Creación inicial del módulo"
  &#125;,
  // Más módulos...
]</code></pre>
              </div>
            </div>
            <div>
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Códigos de respuesta</h4>
              <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-1">
                <li><span class="font-mono text-green-600 dark:text-green-400">200</span> - Éxito, retorna la lista de módulos</li>
                <li><span class="font-mono text-red-600 dark:text-red-400">500</span> - Error en la consulta</li>
              </ul>
            </div>
          </div>
          
          <!-- POST /modulos -->
          <div class="mb-12">
            <div class="flex items-center gap-3 mb-4 relative">
              <span class="bg-blue-500 text-white px-3 py-1 rounded-md font-bold text-sm">POST</span>
              <CopyButton />
              <ApiUrl endpoint="/modulos" tag="h3" />
            </div>
            <p class="mb-4 text-gray-700 dark:text-gray-300">
              Crea un nuevo módulo en el sistema.
            </p>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Cuerpo de la solicitud</h4>
              <div class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg relative">
                <CopyButton />
                <pre class="language-json overflow-x-auto text-sm"><code>&#123;
"fecha_accion": "2025-05-02T23:32:16.825Z",
"rutas": "/fichas",
"descripcion_ruta": "los usuarios",
"mensaje_cambio": "modulo usuarios",
"estado": true,
"fecha_creacion": "2025-05-02T23:32:16.825Z"
              
&#125;</code></pre>
              </div>
            </div>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Respuesta</h4>
              <div class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg">
                <pre class="language-json overflow-x-auto text-sm"><code>&#123;
  "mensaje": "Módulo creado exitosamente"
&#125;</code></pre>
              </div>
            </div>
            <div>
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Códigos de respuesta</h4>
              <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-1">
                <li><span class="font-mono text-green-600 dark:text-green-400">201</span> - Módulo creado exitosamente</li>
                <li><span class="font-mono text-yellow-600 dark:text-yellow-400">404</span> - No se pudo crear el módulo</li>
                <li><span class="font-mono text-red-600 dark:text-red-400">500</span> - Error en el servidor</li>
              </ul>
            </div>
          </div>
          
          <!-- PUT /modulos/:id_modulo -->
          <div class="mb-12">
            <div class="flex items-center gap-3 mb-4 relative">
              <span class="bg-yellow-500 text-white px-3 py-1 rounded-md font-bold text-sm">PUT</span>
              <CopyButton />
              <ApiUrl endpoint="/modulos/:id_modulo" tag="h3" />
            </div>
            <p class="mb-4 text-gray-700 dark:text-gray-300">
              Actualiza la información de un módulo existente.
            </p>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Parámetros de URL</h4>
              <table class="min-w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
                <thead class="bg-gray-100 dark:bg-gray-900">
                  <tr>
                    <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Parámetro</th>
                    <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Tipo</th>
                    <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Descripción</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">id_modulo</td>
                    <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Integer</td>
                    <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">ID único del módulo a actualizar</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Cuerpo de la solicitud</h4>
              <div class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg relative">
                <CopyButton />
                <pre class="language-json overflow-x-auto text-sm"><code>&#123;
"rutas": "/fichas",
"descripcion_ruta": "los ",
"mensaje_cambio": "modulo usuarios",
"estado": true,
"fecha_accion": "2025-05-02T23:32:16.825Z",
"fecha_creacion": "2025-05-02T23:32:16.825Z"
              
&#125;</code></pre>
              </div>
            </div>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Respuesta</h4>
              <div class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg">
                <pre class="language-json overflow-x-auto text-sm"><code>&#123;
  "mensaje": "Módulo actualizado exitosamente"
&#125;</code></pre>
              </div>
            </div>
            <div>
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Códigos de respuesta</h4>
              <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-1">
                <li><span class="font-mono text-green-600 dark:text-green-400">200</span> - Módulo actualizado exitosamente</li>
                <li><span class="font-mono text-yellow-600 dark:text-yellow-400">404</span> - Módulo no encontrado o no se pudo actualizar</li>
                <li><span class="font-mono text-red-600 dark:text-red-400">500</span> - Error en el servidor</li>
              </ul>
            </div>
          </div>
          
          <!-- DELETE /modulos/:id_modulo -->
          <div>
            <div class="flex items-center gap-3 mb-4 relative">
              <span class="bg-red-500 text-white px-3 py-1 rounded-md font-bold text-sm">DELETE</span>
              <CopyButton />
              <ApiUrl endpoint="/modulos/:id_modulo" tag="h3" />
            </div>
            <p class="mb-4 text-gray-700 dark:text-gray-300">
              Elimina un módulo existente del sistema.
            </p>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Parámetros de URL</h4>
              <table class="min-w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
                <thead class="bg-gray-100 dark:bg-gray-900">
                  <tr>
                    <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Parámetro</th>
                    <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Tipo</th>
                    <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Descripción</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">id_modulo</td>
                    <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Integer</td>
                    <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">ID único del módulo a eliminar</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Respuesta</h4>
              <div class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg">
                <pre class="language-json overflow-x-auto text-sm"><code>&#123;
  "mensaje": "Módulo eliminado exitosamente"
&#125;</code></pre>
              </div>
            </div>
            <div>
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Códigos de respuesta</h4>
              <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-1">
                <li><span class="font-mono text-green-600 dark:text-green-400">200</span> - Módulo eliminado exitosamente</li>
                <li><span class="font-mono text-yellow-600 dark:text-yellow-400">404</span> - Módulo no encontrado</li>
                <li><span class="font-mono text-red-600 dark:text-red-400">500</span> - Error en el servidor</li>
              </ul>
            </div>
          </div>
        </section>
      </AnimacionSubida>
      
      <!-- Códigos de error -->
      <AnimacionSubida delay={800} duration={800}>
        <section class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 border border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-bold mb-6 text-indigo-600 dark:text-indigo-400">Códigos de Error</h2>
          <table class="min-w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
            <thead class="bg-gray-100 dark:bg-gray-900">
              <tr>
                <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Código</th>
                <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Descripción</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono text-green-600 dark:text-green-400">200</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Operación exitosa</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono text-green-600 dark:text-green-400">201</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Recurso creado exitosamente</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono text-yellow-600 dark:text-yellow-400">404</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Recurso no encontrado</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono text-red-600 dark:text-red-400">500</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Error interno del servidor</td>
              </tr>
            </tbody>
          </table>
        </section>
      </AnimacionSubida>
    </div>
  </div>
</Layout>
