---
import RequerimientosLayout from '../../../layouts/RequerimientosLayout.astro';
import RequerimientosSidebar from '../../../components/RequerimientosSidebar.astro';
import Button from '../../../components/Button/Button.astro';
---

<RequerimientosLayout title="Permisos - Requerimientos">
    <RequerimientosSidebar />
    
    <div class="fixed top-4 right-4 z-10 flex gap-4">
        <Button 
            href="/ver-requerimientos"
            variant="outline"
            size="lg"
            class="backdrop-blur-md bg-slate-800/50 shadow-xl hover:bg-slate-700/50"
        >
            Volver a Requerimientos
        </Button>
    </div>

    <div class="min-h-screen w-full p-8 pl-72 flex flex-col items-center">
        <!-- Encabezado -->
        <div class="w-full max-w-4xl mb-8">
            <h1 class="text-3xl font-bold text-white mb-2">Requerimiento: Permisos</h1>
            <p class="text-slate-300">ID: 8 | Prioridad: <span class="text-purple-400 font-medium">Alta</span></p>
            <div class="h-1 bg-gradient-to-r from-purple-500 to-transparent rounded-full mt-2"></div>
        </div>

        <!-- Contenido del Requerimiento -->
        <div class="w-full max-w-4xl bg-gray-800 rounded-lg shadow-lg overflow-hidden">
            <!-- Sección de Descripción -->
            <div class="p-6 border-b border-gray-700">
                <h2 class="text-xl font-semibold text-white mb-4">Descripción</h2>
                <p class="text-gray-300 mb-4">
                    Este módulo permite la gestión de permisos dentro del sistema, los cuales definen las acciones específicas que los usuarios pueden realizar. Los permisos pueden ser asignados a roles, lo que permite un control de acceso detallado y personalizado para cada tipo de usuario en la aplicación.
                </p>
                <div class="flex flex-wrap gap-2 mt-4">
                    <span class="px-3 py-1 bg-purple-900/50 text-purple-300 text-sm rounded-full">Permisos</span>
                    <span class="px-3 py-1 bg-blue-900/50 text-blue-300 text-sm rounded-full">Seguridad</span>
                    <span class="px-3 py-1 bg-green-900/50 text-green-300 text-sm rounded-full">Control de Acceso</span>
                </div>
            </div>

            <!-- Sección de Entradas -->
            <div class="p-6 border-b border-gray-700">
                <h2 class="text-xl font-semibold text-white mb-4">Entradas</h2>
                <ul class="list-disc pl-5 space-y-2 text-gray-300">
                    <li>Nombre del permiso (ej. 'crear_usuario', 'editar_rol')</li>
                    <li>Descripción del permiso</li>
                    <li>Módulo al que pertenece el permiso</li>
                    <li>Estado del permiso (activo/inactivo)</li>
                </ul>
            </div>

            <!-- Sección de Salidas -->
            <div class="p-6 border-b border-gray-700">
                <h2 class="text-xl font-semibold text-white mb-4">Salidas</h2>
                <ul class="list-disc pl-5 space-y-2 text-gray-300">
                    <li>Listado completo de permisos disponibles</li>
                    <li>Confirmación de operaciones (creación, actualización, eliminación)</li>
                    <li>Mensajes de error o validación</li>
                    <li>Asignación de permisos a roles</li>
                </ul>
            </div>

            <!-- Sección de Diseño -->
            <div class="p-6">
                <h2 class="text-xl font-semibold text-white mb-6">Diseño de la Interfaz</h2>
                <div class="bg-gray-900 p-6 rounded-lg">
                    <div class="rounded-lg overflow-hidden border border-gray-700">
                        <img 
                            src="/image/permisos/1.png" 
                            alt="Diseño de la Interfaz de Permisos"
                            class="w-full h-auto object-contain"
                        />
                        <div class="rounded-lg overflow-hidden border border-gray-700 mt-6">
                            <img 
                                src="/image/permisos/2.png" 
                                alt="Diseño alternativo de la Interfaz de Permisos"
                                class="w-full h-auto object-contain"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</RequerimientosLayout>

<style>
    /* Estilos adicionales específicos para esta página */
    ul li::marker {
        color: rgba(168, 85, 247, 0.7);
    }
    
    /* Estilos para la tabla */
    table {
        border-collapse: separate;
        border-spacing: 0;
    }
    
    th, td {
        padding: 0.75rem 1rem;
    }
    
    tr:hover {
        background-color: rgba(31, 41, 55, 0.5);
    }
    
    /* Estilos para los botones de acción */
    button:focus {
        outline: none;
        ring: 2px;
        ring-offset-2: 2px;
        ring-purple-500: true;
    }
</style>
