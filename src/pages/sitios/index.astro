---
import Layout from '../../layouts/Layout.astro';
import CopyButton from '../../components/CopyButton.astro';
import ApiUrl from '../../components/ApiUrl.astro';
import AnimacionSubida from '../../components/AnimacionSubida/AnimacionSubida.astro';
---

<Layout title="Documentación API de Sitios">
  <div class="max-w-4xl mx-auto pt-10 pb-20">
    <h1 class="text-4xl font-bold text-center mb-10 bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-indigo-600">API de Sitios</h1>
    
    <div class="space-y-12">
      <!-- Introducción -->
      <AnimacionSubida duration={800} delay={0}>
        <section class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 border border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-bold mb-4 text-indigo-600 dark:text-indigo-400">Introducción</h2>
          <p class="text-gray-700 dark:text-gray-300 mb-4">
            Esta API permite gestionar los sitios del sistema, ofreciendo operaciones CRUD (Crear, Leer, Actualizar y Eliminar) sobre los registros de sitios almacenados en la base de datos.
          </p>
          <p class="text-gray-700 dark:text-gray-300">
            Todas las respuestas se entregan en formato JSON y utilizan códigos de estado HTTP estándar.
          </p>
        </section>
      </AnimacionSubida>

      <!-- Base URL -->
      <AnimacionSubida duration={800} delay={200}>
        <section class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 border border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-bold mb-4 text-indigo-600 dark:text-indigo-400">URL Base</h2>
          <div class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg font-mono text-sm relative">
            <CopyButton />
            <ApiUrl endpoint="/sitios" tag="code" />
          </div>
          <p class="mt-4 text-gray-700 dark:text-gray-300">
            Todos los endpoints descritos en esta documentación deben ser precedidos por esta URL base.
          </p>
        </section>
      </AnimacionSubida>
      
      <!-- Modelo de datos -->
      <AnimacionSubida duration={800} delay={400}>
        <section class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 border border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-bold mb-6 text-indigo-600 dark:text-indigo-400">Modelo de datos</h2>
          <h3 class="text-xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Sitio</h3>
          <table class="min-w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
            <thead class="bg-gray-100 dark:bg-gray-900">
              <tr>
                <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Campo</th>
                <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Tipo</th>
                <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Descripción</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">id_sitio</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Integer</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Identificador único del sitio (autoincrementable)</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">nombre_sitio</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">String</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Nombre del sitio</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">ubicacion</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">String</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Ubicación física del sitio</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">fecha_creacion</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">DateTime</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Fecha de creación del sitio</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">ficha_tecnica</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">String</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Descripción técnica del sitio</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">fecha_modificacion</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">DateTime</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Fecha de última modificación del sitio</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">persona_encargada_id</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Integer</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">ID de la persona encargada del sitio</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">tipo_sitio_id</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Integer</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">ID del tipo de sitio</td>
              </tr>
            </tbody>
          </table>
        </section>
      </AnimacionSubida>

      <!-- Endpoints -->
      <AnimacionSubida duration={800} delay={600}>
        <section class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 border border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-bold mb-6 text-indigo-600 dark:text-indigo-400">Endpoints</h2>

          <!-- GET /sitios -->
          <div class="mb-12">
            <div class="flex items-center gap-3 mb-4 relative">
              <span class="bg-green-500 text-white px-3 py-1 rounded-md font-bold text-sm">GET</span>
              <CopyButton />
              <ApiUrl endpoint="/sitios" tag="h3" />
            </div>
            <p class="mb-4 text-gray-700 dark:text-gray-300">
              Obtiene una lista de todos los sitios registrados en el sistema.
            </p>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Respuesta</h4>
              <div class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg">
                <pre class="language-json overflow-x-auto text-sm"><code>[&#123;
  "id_sitio": 1,
  "nombre_sitio": "Laboratorio Principal",
  "ubicacion": "Edificio A, Piso 2",
  "fecha_creacion": "2024-01-01T00:00:00.000Z",
  "ficha_tecnica": "Equipado con 20 computadoras",
  "fecha_modificacion": "2024-01-01T00:00:00.000Z",
  "persona_encargada_id": 5,
  "tipo_sitio_id": 2
&#125;,
  // Más sitios...
]</code></pre>
              </div>
            </div>
            <div>
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Códigos de respuesta</h4>
              <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-1">
                <li><span class="font-mono text-green-600 dark:text-green-400">200</span> - Éxito, retorna la lista de sitios</li>
                <li><span class="font-mono text-red-600 dark:text-red-400">500</span> - Error del servidor</li>
              </ul>
            </div>
          </div>

          <!-- GET /sitios/:id_sitio -->

          <!-- POST /sitios -->
          <div class="mb-12">
            <div class="flex items-center gap-3 mb-4 relative">
              <span class="bg-blue-500 text-white px-3 py-1 rounded-md font-bold text-sm">POST</span>
              <CopyButton />
              <ApiUrl endpoint="/sitios" tag="h3" />
            </div>
            <p class="mb-4 text-gray-700 dark:text-gray-300">
              Crea un nuevo sitio en el sistema.
            </p>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Cuerpo de la solicitud</h4>
              <div class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg relative">
                <CopyButton />
                <pre class="language-json overflow-x-auto text-sm"><code>&#123;

"nombre_sitio": "Y13",
"ubicacion": "TIC",
"ficha_tecnica": "2900810",
"estado": true,
"fecha_creacion": "2025-05-02T23:13:18.605Z",
"fecha_modificacion": "2025-05-02T23:13:18.605Z",
"tipo_sitio_id": 1,
"persona_encargada": 2
              
&#125;</code></pre>
              </div>
            </div>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Respuesta</h4>
              <div class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg">
                <pre class="language-json overflow-x-auto text-sm"><code>&#123;
"message": "El sitio se registró en el sistema"
&#125;</code></pre>
              </div>
            </div>
            <div>
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Códigos de respuesta</h4>
              <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-1">
                <li><span class="font-mono text-green-600 dark:text-green-400">200</span> - Sitio creado exitosamente</li>
                <li><span class="font-mono text-red-600 dark:text-red-400">500</span> - Error en el servidor</li>
              </ul>
            </div>
          </div>

          <!-- PUT /sitios/:id_sitio -->
          <div class="mb-12">
            <div class="flex items-center gap-3 mb-4 relative">
              <span class="bg-yellow-500 text-white px-3 py-1 rounded-md font-bold text-sm">PUT</span>
              <CopyButton />
              <ApiUrl endpoint="/sitios/:id_sitio" tag="h3" />
            </div>
            <p class="mb-4 text-gray-700 dark:text-gray-300">
              Actualiza la información de un sitio existente.
            </p>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Parámetros de URL</h4>
              <table class="min-w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
                <thead class="bg-gray-100 dark:bg-gray-900">
                  <tr>
                    <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Parámetro</th>
                    <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Tipo</th>
                    <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Descripción</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">id_sitio</td>
                    <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Integer</td>
                    <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">ID único del sitio a actualizar</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Cuerpo de la solicitud</h4>
              <div class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg relative">
                <CopyButton />
                <pre class="language-json overflow-x-auto text-sm"><code>&#123;

"nombre_sitio": "Y14",
"ubicacion": "TIC",
"ficha_tecnica": "2900810",
"estado": false,
"fecha_creacion": "2025-05-02T23:13:18.605Z",
"fecha_modificacion": "2025-05-02T23:13:18.605Z",
"tipo_sitio_id": 1,
"persona_encargada": 2
              
&#125;</code></pre>
              </div>
            </div>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Respuesta</h4>
              <div class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg">
                <pre class="language-json overflow-x-auto text-sm"><code>&#123;
"message": "El sitio ha sido actualizado",
&#125;</code></pre>
              </div>
            </div>
            <div>
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Códigos de respuesta</h4>
              <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-1">
                <li><span class="font-mono text-green-600 dark:text-green-400">200</span> - Sitio actualizado exitosamente</li>
                <li><span class="font-mono text-yellow-600 dark:text-yellow-400">400</span> - No se ha podido actualizar el sitio</li>
                <li><span class="font-mono text-red-600 dark:text-red-400">500</span> - Error en el servidor</li>
              </ul>
            </div>
          </div>
          
          <!-- DELETE /sitios/:id_sitio -->
          <div>
            <div class="flex items-center gap-3 mb-4 relative">
              <span class="bg-red-500 text-white px-3 py-1 rounded-md font-bold text-sm">DELETE</span>
              <CopyButton />
              <ApiUrl endpoint="/sitios/:id_sitio" tag="h3" />
            </div>
            <p class="mb-4 text-gray-700 dark:text-gray-300">
              Elimina un sitio existente del sistema.
            </p>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Parámetros de URL</h4>
              <table class="min-w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
                <thead class="bg-gray-100 dark:bg-gray-900">
                  <tr>
                    <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Parámetro</th>
                    <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Tipo</th>
                    <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Descripción</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono">id_sitio</td>
                    <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Integer</td>
                    <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">ID único del sitio a eliminar</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="mb-6">
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Respuesta</h4>
              <div class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg">
                <pre class="language-json overflow-x-auto text-sm"><code>&#123;
"message": "El sitio ha sido eliminado"
&#125;</code></pre>
              </div>
            </div>
            <div>
              <h4 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">Códigos de respuesta</h4>
              <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-1">
                <li><span class="font-mono text-green-600 dark:text-green-400">200</span> - Sitio eliminado exitosamente</li>
                <li><span class="font-mono text-yellow-600 dark:text-yellow-400">400</span> - No se ha podido eliminar el sitio</li>
                <li><span class="font-mono text-red-600 dark:text-red-400">500</span> - Error del servidor</li>
              </ul>
            </div>
          </div>
        </section>
      </AnimacionSubida>
      
      <!-- Códigos de error -->
      <AnimacionSubida duration={800} delay={800}>
        <section class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 border border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-bold mb-6 text-indigo-600 dark:text-indigo-400">Códigos de Error</h2>
          <table class="min-w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
            <thead class="bg-gray-100 dark:bg-gray-900">
              <tr>
                <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Código</th>
                <th class="text-left py-2 px-4 border-b border-gray-200 dark:border-gray-700">Descripción</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono text-green-600 dark:text-green-400">200</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Operación exitosa</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono text-yellow-600 dark:text-yellow-400">400</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Solicitud incorrecta o recurso no encontrado</td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 font-mono text-red-600 dark:text-red-400">500</td>
                <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">Error interno del servidor</td>
              </tr>
            </tbody>
          </table>
        </section>
      </AnimacionSubida>
    </div>
  </div>
</Layout>
