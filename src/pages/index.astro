---
import Layout from '../layouts/Layout.astro';
import { Card } from '../components/Card';
import { AnimacionSubida } from '../components/AnimacionSubida';
---

<Layout title="Página de Inicio">
	<div class="min-h-screen flex items-center justify-center">
		<AnimacionSubida duration={1200}>
			<Card 
				title="Bienvenidos a la Documentación"
				description="Documentación de la API de Boxware"
				hasGlassEffect={true}
			/>
		</AnimacionSubida>
	</div>
</Layout>
