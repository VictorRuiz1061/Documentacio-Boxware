---
import Layout from '../layouts/Layout.astro';
import { Card } from '../components/Card';
---

<Layout title="Requerimientos del Sistema" hideSidebar={true}>
	<div class="space-y-8 max-w-4xl mx-auto">
		<Card 
			title="Requerimientos" 
			subtitle="Sistema Boxware"
		/>
		
		<div class="bg-white/10 backdrop-blur-md rounded-xl p-6 border border-white/20 shadow-xl">
			<h3 class="text-2xl font-bold text-blue-400 mb-4">Requerimientos Técnicos</h3>
			<ul class="space-y-3 text-lg">
				<li class="flex items-start">
					<span class="text-green-400 mr-2">✓</span>
				</li>
				<li class="flex items-start">
					<span class="text-green-400 mr-2">✓</span>
					<span>Conexión a Internet: 10 Mbps mínimo recomendado</span>
				</li>
				<li class="flex items-start">
					<span class="text-green-400 mr-2">✓</span>
					<span>Resolución de pantalla: 1280x720 o superior</span>
				</li>
				<li class="flex items-start">
					<span class="text-green-400 mr-2">✓</span>
					<span>JavaScript habilitado en el navegador</span>
				</li>
			</ul>
		</div>
		
		<div class="bg-white/10 backdrop-blur-md rounded-xl p-6 border border-white/20 shadow-xl">
			<h3 class="text-2xl font-bold text-blue-400 mb-4">Funcionalidades Principales</h3>
			<ul class="space-y-3 text-lg">
				<li class="flex items-start">
					<span class="text-blue-400 mr-2">→</span>
					<span>Gestión completa de inventario</span>
				</li>
				<li class="flex items-start">
					<span class="text-blue-400 mr-2">→</span>
					<span>Control de usuarios y permisos</span>
				</li>
				<li class="flex items-start">
					<span class="text-blue-400 mr-2">→</span>
					<span>Seguimiento de materiales y movimientos</span>
				</li>
				<li class="flex items-start">
					<span class="text-blue-400 mr-2">→</span>
					<span>Generación de reportes y estadísticas</span>
				</li>
			</ul>
		</div>
	</div>
</Layout>
