---
// Custom layout specifically for the requerimientos section
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Boxware</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="bg-slate-900 text-slate-100 min-h-screen">
    <div class="flex min-h-screen">
      <!-- Content will be injected here -->
      <slot />
    </div>
  </body>
</html>

<style is:global>
  /* Global styles for the requerimientos layout */
  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  
  body {
    margin: 0;
    padding: 0;
    background-image: 
      radial-gradient(circle at 25% 25%, rgba(0, 0, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 75% 75%, rgba(0, 0, 255, 0.1) 0%, transparent 50%),
      linear-gradient(to bottom, #0f172a, #1e293b);
    background-attachment: fixed;
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: rgba(15, 23, 42, 0.6);
  }
  
  ::-webkit-scrollbar-thumb {
    background: rgba(59, 130, 246, 0.5);
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: rgba(59, 130, 246, 0.7);
  }
</style>
