---
import { AnimacionDeSubida } from '../AnimacionDeSubida';

interface Props {
  title?: string;
  subtitle?: string;
  hasGlassEffect?: boolean;
}

const {
  title,
  subtitle,
  hasGlassEffect = true,
} = Astro.props;
---

<div class={`p-6 rounded-xl ${hasGlassEffect ? 'backdrop-blur-md bg-white/10 border border-white/20 shadow-xl' : 'bg-white dark:bg-gray-800 shadow-md'}`}>
  <div class="text-center">
    {title && (
      <AnimacionDeSubida duration={1200}>
        <h2 class="text-6xl font-bold text-white mb-4">{title}</h2>
      </AnimacionDeSubida>
    )}
    {subtitle && (
      <AnimacionDeSubida delay={300} duration={1000}>
        <p class="text-6xl font-bold text-white mb-4">{subtitle}</p>
      </AnimacionDeSubida>
    )}
    <slot />
  </div>
</div>
