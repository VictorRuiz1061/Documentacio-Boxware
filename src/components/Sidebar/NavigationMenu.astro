    url: '/movimientos',
    badge: 'Doc'
  },
  { 
    name: 'Permisos', 
    icon: 'key', 
    url: '/permiso',
    badge: 'Doc'
  },
  { 
    name: 'Programas', 
    icon: 'calendar', 
    url: '/programas',
    badge: 'Doc'
  },
  { 
    name: 'Roles', 
    icon: 'users', 
    url: '/roles',
    badge: 'Doc'
  },
  { 
    name: 'Sitios', 
    icon: 'map-pin', 
    url: '/sitios',
    badge: 'Doc'
  },
  { 
    name: 'Tipo Materiales', 
    icon: 'package', 
    url: '/tipo-materiales',
    badge: 'Doc'
  },
  { 
    name: 'Tipos de Movimiento', 
    icon: 'git-branch', 
