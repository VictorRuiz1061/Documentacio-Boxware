    name: 'Inicio', 
    icon: 'home', 
    url: '/',
  },
  { 
    name: 'Autenticación', 
    icon: 'lock', 
    url: '/auth',
    badge: 'Doc'
  },
  { 
    name: 'Usuarios', 
    icon: 'user', 
    url: '/usuario',
    badge: 'Doc'
  },
  { 
    name: 'Áreas', 
    icon: 'map', 
    url: '/area',
    badge: 'Doc'
  },
  { 
    name: 'Categorías de Elementos', 
    icon: 'tag', 
    url: '/categoria-elementos',
    badge: 'Doc'
  },
  { 
    name: 'Centros', 
    icon: 'building', 
    url: '/centros',
    badge: 'Doc'
  },
  { 
    name: 'Sedes', 
    icon: 'home', 
    url: '/sedes',
    badge: 'Doc'
  },
  { 
    name: 'Municipios', 
    icon: 'map-pin', 
    url: '/municipios',
    badge: 'Doc'
  },
  { 
    name: 'Fichas', 
    icon: 'file', 
    url: '/fichas',
    badge: 'Doc'
  },
  { 
    name: 'Materiales', 
    icon: 'box', 
    url: '/materiales',
    badge: 'Doc'
  },
  { 
    name: 'Módulos', 
    icon: 'puzzle', 
    url: '/modulo',
    badge: 'Doc'
  },
  { 
    name: 'Movimientos', 
