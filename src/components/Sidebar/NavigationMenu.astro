---
interface Props {
  isAdmin: boolean;
}

const { isAdmin } = Astro.props;
const currentPath = Astro.url.pathname;

interface MenuItem {
  name: string;
  icon: string;
  url: string;
  badge?: string;
}

const menuItems: MenuItem[] = [
