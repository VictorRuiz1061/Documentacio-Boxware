---
interface Props {
  userName: string;
  userAvatar: string;
  isAdmin: boolean;
}

const { userName, userAvatar, isAdmin } = Astro.props;
---

<div>
  <div class="bg-gradient-to-br from-blue-900/40 to-indigo-900/40 backdrop-blur-sm rounded-xl overflow-hidden border border-indigo-700/30 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-0.5">
    <div class="h-16 bg-gradient-to-r from-blue-600/20 to-indigo-500/20 relative">
      <div class="absolute inset-0 opacity-20 bg-[url('data:image/svg+xml,%3Csvg%20width%3D%2760%27%20height%3D%2760%27%20viewBox%3D%270%200%2060%2060%27%20xmlns%3D%27http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%27%3E%3Cg%20fill%3D%27none%27%20fill-rule%3D%27evenodd%27%3E%3Cg%20fill%3D%27%239C92AC%27%20fill-opacity%3D%270.2%27%3E%3Cpath%20d%3D%27M36%2034v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6%2034v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6%204V0H4v4H0v2h4v4h2V6h4V4H6z%27%2F%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E')]"></div>
    </div>
    
    <div class="p-4 pt-0 flex items-start gap-3 -mt-6">
      <div class="relative">
        <div class="rounded-full p-0.5 bg-gradient-to-r from-indigo-600 to-blue-500">
          <img 
            src={userAvatar} 
            alt={`Avatar de ${userName}`}
            class="h-12 w-12 rounded-full object-cover shadow-md border-2 border-indigo-400 transition-transform duration-300 hover:scale-105"
          />
          <div class="absolute w-2.5 h-2.5 bg-emerald-500 rounded-full border-2 border-indigo-950 bottom-0 right-0 shadow"></div>
        </div>
      </div>
      
      <div class="pt-6">
        <h3 class="text-base font-semibold text-white">{userName}</h3>
        <div class="flex items-center gap-2">
          <span class="inline-flex items-center bg-indigo-500/20 text-indigo-300 text-xs font-medium px-2 py-0.5 rounded border border-indigo-500/30">
            {isAdmin ? 'Administrador' : 'Usuario'}
          </span>
          <span class="text-xs font-medium text-emerald-500">En l√≠nea</span>
        </div>
      </div>
    </div>
  </div>
</div>
