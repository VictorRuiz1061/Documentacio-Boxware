---
// Component for the Requerimientos sidebar navigation
const currentPath = Astro.url.pathname;

// Menu items with icons (icons aligned to Sidebar/NavigationMenu.astro)
const menuItems = [
  { name: '¿Qué es Boxware?', path: '/ver-requerimientos', icon: 'home' },
  { name: 'Inicio', path: '/ver-requerimientos/inicio', icon: 'home' },
  { name: 'Inicio de sesión', path: '/ver-requerimientos/inicio-sesion', icon: 'lock' },
  { name: 'Registro', path: '/ver-requerimientos/registro', icon: 'user' },
  { name: 'Dashboard', path: '/ver-requerimientos/dashboard', icon: 'clipboard' },
  { name: 'Módulos', path: '/ver-requerimientos/modulos', icon: 'puzzle' },
  { name: 'Usuarios', path: '/ver-requerimientos/usuarios', icon: 'user' },
  { name: 'Roles', path: '/ver-requerimientos/roles', icon: 'users' },
  { name: 'Permisos', path: '/ver-requerimientos/permisos', icon: 'key' },
  { name: 'Materiales', path: '/ver-requerimientos/materiales', icon: 'box' },
  { name: 'Categorías elementos', path: '/ver-requerimientos/categorias-elementos', icon: 'tag' },
  { name: 'Tipos de materiales', path: '/ver-requerimientos/tipos-materiales', icon: 'package' },
  { name: 'Movimientos', path: '/ver-requerimientos/movimientos', icon: 'refresh' },
  { name: 'Tipos de movimientos', path: '/ver-requerimientos/tipos-movimientos', icon: 'git-branch' },
  { name: 'Sedes', path: '/ver-requerimientos/sedes', icon: 'home' },
  { name: 'Centros', path: '/ver-requerimientos/centros', icon: 'building' },
  { name: 'Municipios', path: '/ver-requerimientos/municipios', icon: 'map-pin' },
  { name: 'Áreas', path: '/ver-requerimientos/areas', icon: 'map' },
  { name: 'Sitios', path: '/ver-requerimientos/sitios', icon: 'map-pin' },
  { name: 'Tipos de sitios', path: '/ver-requerimientos/tipos-sitios', icon: 'map' },
  { name: 'Programas', path: '/ver-requerimientos/programas', icon: 'calendar' },
  { name: 'Fichas', path: '/ver-requerimientos/fichas', icon: 'file' },
  { name: 'Informes y reportes', path: '/ver-requerimientos/informes-reportes', icon: 'clipboard' },
  { name: 'Notificaciones', path: '/ver-requerimientos/notificaciones', icon: 'list' },
  { name: 'Ajustes', path: '/ver-requerimientos/ajustes', icon: 'list' },
  { name: 'Cerrar sesión', path: '/ver-requerimientos/cerrar-sesion', icon: 'lock' },
  { name: 'Recuperación de cuenta', path: '/ver-requerimientos/recuperacion-cuenta', icon: 'shield' },
  { name: 'Diagramas', path: '/ver-requerimientos/diagramas', icon: 'list' }
];
---

<!-- Sidebar for Requerimientos (matching home design) -->
<aside class="bg-gradient-to-br from-slate-800 via-blue-950 to-slate-900 text-white h-screen w-72 fixed left-0 top-0 overflow-y-auto shadow-xl border-r border-slate-700/30 z-10">
  <div class="flex flex-col h-full">
    <!-- Header -->
    <div class="p-5 border-b border-slate-700/30">
      <div class="flex items-center gap-3">
        <div class="bg-gradient-to-br from-blue-500 to-indigo-600 p-2.5 rounded-xl shadow-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h1 class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-200 to-indigo-300">Requerimientos</h1>
      </div>
    </div>

    <!-- Navigation Menu -->
    <div class="flex-grow">
      <nav class="space-y-1 px-4 pt-4">
        {menuItems.map((item) => (
          <a
            href={item.path}
            class={`flex items-center px-4 py-3 text-sm rounded-lg transition-colors relative ${
              currentPath === item.path
                ? 'text-white bg-gradient-to-r from-blue-700/60 to-indigo-700/60 shadow-md font-medium'
                : 'text-indigo-100 hover:bg-white/10'
            }`}
          >
            <span class="mr-3 text-indigo-300">
              {item.icon === 'map' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                </svg>
              )}
              {item.icon === 'user' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              )}
              {item.icon === 'home' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
              )}
              {item.icon === 'tag' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
              )}
              {item.icon === 'building' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              )}
              {item.icon === 'map-pin' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
              {item.icon === 'file' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              )}
              {item.icon === 'box' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
              )}
              {item.icon === 'puzzle' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
                </svg>
              )}
              {item.icon === 'refresh' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
              )}
              {item.icon === 'key' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                </svg>
              )}
              {item.icon === 'calendar' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              )}
              {item.icon === 'users' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
              )}
              {item.icon === 'package' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
              )}
              {item.icon === 'git-branch' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M7 3v12m0 0l-4-4m4 4l4-4m6 0v7a4 4 0 01-4 4H5" />
                </svg>
              )}
              {item.icon === 'list' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
                </svg>
              )}
              {item.icon === 'clipboard' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
              )}
              {item.icon === 'shield' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              )}
              {item.icon === 'lock' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
              )}
            </span>
            <span>{item.name}</span>
          </a>
        ))}
      </nav>
    </div>
  </div>
</aside>
