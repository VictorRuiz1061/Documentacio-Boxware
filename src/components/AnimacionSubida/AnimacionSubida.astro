---
interface Props {
  delay?: number;  // Retraso en milisegundos
  duration?: number;  // Duraci√≥n en milisegundos
}

const {
  delay = 0,
  duration = 800,
} = Astro.props;
---

<div 
  class="animate-slide-up opacity-0" 
  style={`--animation-delay: ${delay}ms; --animation-duration: ${duration}ms;`}
>
  <slot />
</div>

<style>
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-slide-up {
    animation: slideUp var(--animation-duration) ease forwards;
    animation-delay: var(--animation-delay);
  }
</style> 